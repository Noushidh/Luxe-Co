            <a href="#" class="hover:text-[#C8A97E] transition">Kids</a>
        </nav>

        <!-- ICONS -->
        <div class="flex items-center space-x-6 slow-load-header slow-load-3">

            <!-- SEARCH -->
            <div class="relative hidden md:block">
                <input type="text" placeholder="Search..."
                    class="pl-4 pr-9 py-2 rounded-full bg-white/10 text-sm text-white placeholder:text-stone-300 outline-none border border-white/20 focus:ring-2 focus:ring-[#C8A97E]">
                <svg class="w-4 h-4 text-stone-200 absolute right-3 top-2.5" fill="none" stroke="currentColor"
                    stroke-width="2" viewBox="0 0 24 24">
                    <circle cx="11" cy="11" r="7"></circle>
                    <line x1="16" y1="16" x2="20" y2="20"></line>
                </svg>
            </div>

            <!-- WISHLIST -->
            <button class="hover:scale-110 transition">
                <svg class="w-6 h-6 text-[#C8A97E]" fill="none" stroke="currentColor" stroke-width="2"
                    viewBox="0 0 24 24">
