<!-- MOBILE MENU -->
<div id="mobileMenu"
    class="fixed top-20 left-0 w-full bg-[#2B1B17] text-white py-6 px-6 space-y-4 transform -translate-y-full opacity-0 transition-all duration-300 md:hidden z-40">

    <a href="#" class="block text-lg hover:text-[#C8A97E] transition">Men</a>
    <a href="#" class="block text-lg hover:text-[#C8A97E] transition">Women</a>
    <a href="#" class="block text-lg hover:text-[#C8A97E] transition">Kids</a>
</div>

<!-- MOBILE MENU TOGGLE SCRIPT -->
<script>
    const mobileMenuBtn = document.getElementById("mobileMenuBtn");
    const mobileMenu = document.getElementById("mobileMenu");

    let isMenuOpen = false;

    mobileMenuBtn.addEventListener("click", () => {
        if (!isMenuOpen) {
            mobileMenu.style.transform = "translateY(0)";
            mobileMenu.style.opacity = "1";
            isMenuOpen = true;
        } else {
            mobileMenu.style.transform = "translateY(-100%)";
            mobileMenu.style.opacity = "0";
            isMenuOpen = false;
        }
    });
</script>
