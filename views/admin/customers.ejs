<div class="w-full min-h-screen bg-[#F5E9DA] p-6">

    <h1 class="text-2xl font-bold text-[#2c2c2c]">User Management</h1>
    <p class="text-sm text-gray-600 mt-1">
        Manage registered customers and their order history.
    </p>

    <div class="flex items-center justify-between mt-6">
        <input 
            type="text"
            placeholder="Search by name or email..."
            class="w-80 px-4 py-2 bg-white border border-gray-300 rounded-lg text-sm"
        />
        <button class="px-4 py-2 bg-[#C8A97E] text-white rounded-lg shadow hover:shadow-md">
            Apply Filters
        </button>
    </div>

    <div class="mt-6 bg-white shadow rounded-lg overflow-hidden">

        <div class="bg-[#C8A97E] grid grid-cols-6 text-xs font-bold text-gray-700 py-3 px-4">
            <div>Name</div>
            <div>Email</div>
            <div>Joined Date</div>
            <div>Orders</div>
            <div>Status</div>
            <div>Action</div>
        </div>

        <% users.forEach((user) => { %>
            <div class="grid grid-cols-6 py-4 px-4 border-b border-gray-100 text-sm">

                <div class="text-gray-700 font-medium">
                    <%= user.fullname %>
                </div>

                <div class="text-gray-600"><%= user.email %></div>

                 <div class="text-gray-600">
                 <%= user.createdAt.toDateString() %>
                </div>

                <div class="text-gray-700">
                 <%= user.orders ? user.orders.length : 0 %>
                </div>

                <div>
                    <% if (!user.isBlocked) { %>
                        <span class="px-3 py-1 text-xs bg-green-500 text-white rounded-full">
                            Active
                        </span>
                    <% } else { %>
                        <span class="px-3 py-1 text-xs bg-red-500 text-white rounded-full">
                            Blocked
                        </span>
                    <% } %>
                </div>

                <div>
                    <a href="#" class="text-[#C8A97E] text-xs">View User</a>
                </div>

            </div>
        <% }) %>

    </div>
</div>
