<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Luxe & Co - Login</title>
  <link rel="stylesheet" href="/css/usercss/login.css">
  <!-- Notyf -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css">
  <script src="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js"></script>
  
</head>
<body>
  <div class="login-container">
    <%- include("../partials/user/notyf", { success: success || [], error: error || [] }) %>
      <!-- Header -->
      <header class="header">
        <div class="logo">Luxe & Co</div>
        <button class="signup-btn" onclick="window.location.href='/user/register'">Sign Up</button>
      </header>

      <!-- Main Content -->
      <div class="main-content">
        <!-- Left Side - Image -->
        <div class="image-section">
          <div class="image-overlay"></div>
        </div>

        <!-- Right Side - Form -->
        <div class="form-section">
          <div class="login-card">
            <h1 class="login-title">Welcome Back</h1>
            <p class="login-subtitle">Sign in to access your Luxe & Co account.</p>

            <form id="loginForm" method="post" action="/user/login">
              <!-- Email -->
              <div class="form-group">
                <label class="form-label" for="email">Email Address</label>
                <input type="email" id="email" name="email" class="form-input" placeholder="you@example.com">
              </div>

              <!-- Password -->
              <div class="form-group">
                <label class="form-label" for="password">Password</label>
                <div class="password-wrapper">
                  <input type="password" id="password" name="password" class="form-input" placeholder="••••••••">
                  <button type="button" class="toggle-password" onclick="togglePassword()">
                    <svg id="eyeIcon" width="20" height="20" viewBox="0 0 24 24" fill="none"
                      xmlns="http://www.w3.org/2000/svg">
                      <path
                        d="M12 5C7 5 2.73 8.11 1 12.5C2.73 16.89 7 20 12 20C17 20 21.27 16.89 23 12.5C21.27 8.11 17 5 12 5ZM12 17.5C9.24 17.5 7 15.26 7 12.5C7 9.74 9.24 7.5 12 7.5C14.76 7.5 17 9.74 17 12.5C17 15.26 14.76 17.5 12 17.5ZM12 9.5C10.34 9.5 9 10.84 9 12.5C9 14.16 10.34 15.5 12 15.5C13.66 15.5 15 14.16 15 12.5C15 10.84 13.66 9.5 12 9.5Z"
                        fill="#4b3621" />
                    </svg>
                  </button>
                </div>
              </div>

              <!-- Login Button -->
              <button type="submit" class="login-btn">Login</button>
            </form>

            <!-- Divider -->
            <div class="divider"><span>or</span></div>

            <!-- Google Login -->
            <button class="google-btn" type="button" onclick="handleGoogleLogin()">
              <img src="https://c.animaapp.com/mhz05t1j6ITCkA/img/group.png" alt="Google">
              <span>Continue with Google</span>
            </button>
            <!-- Forgot Password -->
            <div class="forgot-password">
              <a href="/user/forgot-password" onclick="handleForgotPassword(event)">Forgot your password?</a>
            </div>

            <!-- Sign Up Link -->
            <div class="signup-link">
              New to Luxe & Co? <a href="/user/register" onclick="handleSignUp(event)">Sign Up</a>
            </div>

          </div>
        </div>
      </div>
  </div>
</body>

<script type="module" src="/script/userjs/login.js"></script>
</html>